<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h2>コメントを編集する</h2>

  <%= form_for([@blog, @comment], url: blog_path(@blog.id)) do |f| %>
    <%= f.hidden_field :blog_id %>
    <div class="field">
      <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
    </div>
    <div class="actions">
      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
  </div>
</div>